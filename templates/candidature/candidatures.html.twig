{% extends 'base.html.twig' %}

{% block title %}Liste des Candidats{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Candidats</h1>

        <!-- Conteneur pour les cartes -->
        <div class="row">
            {% for candidat in candidats %}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ candidat.nom }} {{ candidat.prenom }}</h5>
                            <h6 class="card-subtitle mb-2 text-muted">{{ candidat.email }}</h6>
                            <p class="card-text">
                                <strong>Date de candidature :</strong> {{ candidat.dateCandidature | date('d-m-Y') }}
                            </p>
                            <p>
                                <span class="badge rounded-pill px-3 py-2"
                                        style="background-color: {% if candidat.status == 'candidature_recue' %}#007bff{% elseif candidat.status == 'entretien_planifie' %}#ffc107{% elseif candidat.status == 'entretien_realise' %}#17a2b8{% elseif candidat.status == 'offre_envoyee' %}#28a745{% elseif candidat.status == 'accepte' %}#28a745{% else %}#f59f8d{% endif %}; color: white;">
                                    {{ candidat.status | capitalize }}
                                </span>
                            </p>
                            <a href="{{ path('candidature_timeline', {'id': candidat.id}) }}" class="btn btn-info btn-sm">Voir Détails</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <p>Aucun candidat trouvé.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
